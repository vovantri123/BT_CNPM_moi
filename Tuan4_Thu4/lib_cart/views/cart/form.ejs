<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Library</title>
     <link rel="stylesheet" href="../../public/css/tailwind.css" />
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-4">
                    <h1 class="text-xl font-bold text-gray-800">
                        <a href="/" class="hover:text-primary-600">üõí Cart Library</a>
                    </h1>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/products" class="text-gray-600 hover:text-primary-600 font-medium">S·∫£n ph·∫©m</a>
                    <a href="/cart" class="text-gray-600 hover:text-primary-600 font-medium">Gi·ªè h√†ng</a>
                    <div id="cart-count" class="bg-primary-600 text-white px-2 py-1 rounded-full text-sm font-bold">0</div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white p-8 rounded-lg shadow">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
                    <button type="button" onclick="window.history.back()" class="font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors duration-200 bg-gray-200 hover:bg-gray-300 text-gray-900 focus:ring-gray-500 px-4 py-2 text-sm">
                        ‚Üê Quay l·∫°i
                    </button>
                </div>

                <form id="cart-form" class="space-y-6">
                    <div>
                        <label for="productId" class="block text-sm font-medium text-gray-700 mb-2">S·∫£n ph·∫©m</label>
                        <select id="productId" name="productId" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500">
                            <option value="">Ch·ªçn s·∫£n ph·∫©m</option>
                            <% products.forEach(product => { %>
                                <option value="<%= product._id %>" <%= cartItem && cartItem.productId === product._id ? 'selected' : '' %>>
                                    <%= product.name %> - <%= product.price.toLocaleString('vi-VN') %> VNƒê (C√≤n: <%= product.stock %>)
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <div>
                        <label for="quantity" class="block text-sm font-medium text-gray-700 mb-2">S·ªë l∆∞·ª£ng</label>
                        <input 
                            type="number" 
                            id="quantity" 
                            name="quantity" 
                            value="<%= cartItem ? cartItem.quantity : 1 %>" 
                            required 
                            min="1"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
                        />
                    </div>

                    <div class="flex space-x-4">
                        <button type="submit" class="font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors duration-200 bg-primary-600 hover:bg-primary-700 text-white focus:ring-primary-500 px-4 py-2 text-sm flex-1">
                            <%= cartItem ? 'C·∫≠p nh·∫≠t' : 'Th√™m v√†o gi·ªè h√†ng' %>
                        </button>
                        <% if (cartItem) { %>
                            <button type="button" onclick="deleteItem()" class="font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors duration-200 bg-red-600 hover:bg-red-700 text-white focus:ring-red-500 px-4 py-2 text-sm">
                                X√≥a
                            </button>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Hidden data for JavaScript -->
    <% if (cartItem) { %>
    <script type="application/json" id="cart-item-data"><%- JSON.stringify(cartItem) %></script>
    <% } %>
    
    <!-- Load cart form JavaScript -->
    <script src="/cart/js/cart-form.js"></script>
</body>
</html>
