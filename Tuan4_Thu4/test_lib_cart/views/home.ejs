        ></div>
        <p>ƒêang th√™m v√†o gi·ªè h√†ng...</p>
      </div>
    </div>

    <script>
      async function addToCart(productId) {
        const loadingEl = document.getElementById('loading');
        loadingEl.classList.remove('hidden');

        try {
          const response = await fetch('/api/quick-add-to-cart', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId }),
          });

          if (response.ok) {
            // Show success message
            showNotification('ƒê√£ th√™m s·∫£n ph·∫©m v√†o gi·ªè h√†ng!', 'success');
            // Reload page to update cart
            setTimeout(() => location.reload(), 1000);
          } else {
            showNotification('C√≥ l·ªói x·∫£y ra, vui l√≤ng th·ª≠ l·∫°i!', 'error');
          }
        } catch (error) {
          console.error('Error:', error);
          showNotification('C√≥ l·ªói x·∫£y ra, vui l√≤ng th·ª≠ l·∫°i!', 'error');
        } finally {
          loadingEl.classList.add('hidden');
        }
      }

      function checkout() {
        if (confirm('Chuy·ªÉn ƒë·∫øn trang thanh to√°n?')) {
          window.location.href = '/cart';
        }
      }

      function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 ${
          type === 'success'
            ? 'bg-green-500'
            : type === 'error'
            ? 'bg-red-500'
            : 'bg-blue-500'
        } text-white`;
        notification.textContent = message;

        document.body.appendChild(notification);

        setTimeout(() => {
          notification.remove();
        }, 3000);
      }
    </script>
  </body>
</html>
